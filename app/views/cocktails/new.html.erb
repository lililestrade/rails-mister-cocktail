<div class="container">

  <div class="title d-flex justify-content-center">
  <h1>CREATE A NEW COCKTAIL</h1>
  </div>

  <div class="card card-details card-new-cocktail">

    <div class="form-group">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>

      <div class="button-create d-flex justify-content-center">
        <%= f.button :submit, "CREATE", class: "btn-form" %>
      </div>

    <% end %>

    </div>
  </div>
</div>
